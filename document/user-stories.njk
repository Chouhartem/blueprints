pagination:
    data: user-stories 
    size: 1
    alias: story
    addAllPagesToCollections: true
permalink: "document/user-stories/{{ story.category | slugify }}/{{ story.title | slugify }}/"
eleventyComputed:
    title: "{{ story.title }}"
    tags:
        - user-stories
        - "{{ story.category | slugify }}"
        - "{{ story.tags }}"
    link-to: "{{ story.linkto }}"
    id: "{{ story.id }}"
---

